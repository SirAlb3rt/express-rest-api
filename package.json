{
	"name": "express-es6-rest-api",
	"version": "0.4.0",
	"description": "Starter project for an ES6 RESTful Express API",
	"main": "start:prod",
	"scripts": {
		"start": "better-npm-run start-development",
		"start:prod": "better-npm-run start-production",
		"test": "better-npm-run start-test"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SirAlb3rt/express-rest-api.git"
	},
	"author": "Alberto Palumbo (https://github.com/SirAlb3rt/)",
	"keywords": ["express", "es6", "rest", "api"],
	"homepage": "https://github.com/SirAlb3rt/express-rest-api.git",
	"bugs": {
		"url": "https://github.com/SirAlb3rt/express-rest-api.git/issues"
	},
	"betterScripts": {
		"start-test": {
			"command": "mocha --compilers js:babel-core/register",
			"env": {
				"NODE_ENV": "test"
			}
		},
		"start-development": {
			"command": "nodemon -w src --exec babel-node src",
			"env": {
				"NODE_ENV": "development",
				"HOST": "0.0.0.0",
				"PORT": "3000"
			}
		},
		"start-production": {
			"command": "nodemon -w src --exec babel-node src",
			"env": {
				"NODE_ENV": "production",
				"HOST": "0.0.0.0",
				"PORT": "3000"
			}
		}
	},
	"license": "MIT",
	"dependencies": {
		"body-parser": "^1.18.2",
		"chalk": "^2.4.1",
		"compression": "^1.7.2",
		"cors": "^2.8.4",
		"express": "^4.16.3",
		"morgan": "^1.9.0",
		"winston": "^2.4.2"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.3",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-1": "^6.24.1",
		"better-npm-run": "0.1.0",
		"chai": "^4.1.2",
		"chai-http": "^4.0.0",
		"eslint": "^4.19.1",
		"eslint-plugin-prettier": "^2.6.0",
		"mocha": "^5.1.1",
		"nodemon": "^1.17.3",
		"prettier": "^1.12.1",
		"prettier-eslint": "^8.8.1"
	}
}
