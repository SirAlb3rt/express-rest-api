{
  "name": "express-es6-rest-api",
  "version": "0.4.0",
  "description": "Starter project for an ES6 RESTful Express API",
  "main": "start:prod",
  "scripts": {
    "start:dev": "better-npm-run start-development",
    "start:prod": "better-npm-run start-production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SirAlb3rt/express-rest-api.git"
  },
  "author": "Alberto Palumbo (https://github.com/SirAlb3rt/)",
  "keywords": ["express", "es6", "rest", "api"],
  "homepage": "https://github.com/SirAlb3rt/express-rest-api.git",
  "bugs": {
    "url": "https://github.com/SirAlb3rt/express-rest-api.git/issues"
  },
  "betterScripts": {
    "start-development": {
      "command": "nodemon -w src --exec babel-node src",
      "env": {
        "NODE_ENV": "development",
        "HOST": "0.0.0.0",
        "PORT": "3000"
      }
    },
    "start-production": {
      "command": "nodemon -w src --exec babel-node src",
      "env": {
        "NODE_ENV": "production",
        "HOST": "0.0.0.0",
        "PORT": "3000"
      }
    }
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "cors": "^2.8.4",
    "express": "^4.15.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "better-npm-run": "0.0.15",
    "chalk": "^2.0.1",
    "eslint": "^4.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "morgan": "^1.8.2",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "prettier-eslint": "^6.4.2",
    "winston": "^2.3.1"
  }
}
